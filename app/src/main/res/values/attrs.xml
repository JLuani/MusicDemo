<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--声明登录注册输入框样式-->
    <declare-styleable name="inputView">
        <!--输入框前面的小图标-->
        <attr name="input_icon" format="reference"></attr>
        <!--输入框提示内容-->
        <attr name="input_hint" format="string"></attr>
        <!--输入框是否需要以密文的形式展示-->
        <attr name="is_password" format="boolean"></attr>
    </declare-styleable>

    <!--声明主页标题样式-->
    <declare-styleable name="mainView">
        <!--主页标题前面的小图标-->
        <attr name="main_fill" format="color"></attr>
        <!--主页标题内容-->
        <attr name="main_text" format="string"></attr>
    </declare-styleable>
</resources>